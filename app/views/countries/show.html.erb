<div class="container d-flex flex-wrap justify-content-center my-4">
  <div class="container">

    <%= link_to(countries_path) do %>
      <div class="btn shadow-sm">
        <i class='bx bx-arrow-back'></i>
        Back
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
      <div class="card h-100 border-0">
        <img src="..." class="card-img-top" alt="...">
      </div>
    </div>
    <div class="col">
      <div class="card h-100 border-0">
        <div class="d-flex">
          <div class="card-body">
            <h5 class="card-title fw-bold"><%= @country.name %></h5>
            <p class="card-text">Native Name: <span class="text-muted"><%= @country.native_name %></span></p>
            <p class="card-text">Population: <span class="text-muted"><%= @country.population %></span></p>
            <p class="card-text">Region: <span class="text-muted"><%= @country.region %></span></p>
            <p class="card-text">Sub Region: <span class="text-muted"><%= @country.sub_region %></span></p>
            <p class="card-text">Capital: <span class="text-muted"><%= @country.capital %></span></p>
          </div>
          <div class="card-body">
            <p class="card-text">Top Level Domain: <span class="text-muted"><%= @country.tld %></span></p>
            <p class="card-text">Currencies: <span class="text-muted"><%= @country.currencies %></span></p>
            <p class="card-text">Languages: <span class="text-muted"><%= @country.languages %></span></p>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">Border Countries:
            <span class="btn btn-secondary shadow-sm mx-3"><%= @country.border_countries %></span>
            <span class="btn btn-secondary shadow-sm mx-3"><%= @country.border_countries %></span>
            <span class="btn btn-secondary shadow-sm mx-3"><%= @country.border_countries %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>